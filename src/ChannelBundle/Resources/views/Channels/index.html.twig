{%extends "ChannelBundle:Default:index.html.twig"%}

{% block content -%}
    <h1>Channels list</h1>

    <table class="records_list table">
        <thead>
            <tr>
				<th>Id</th>
                <th>Title</th>
                <th>Active Status</th>
                 <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
				<td><a href="{{ path('channels_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{% if entity.active == false %} Active 
				{% else %} Unactive
				{%endif%}</td>
                 <td>	
                <ul>
                    <li>
                        <a href="{{ path('channels_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('channels_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('channels_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
